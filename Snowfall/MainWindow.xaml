<Window x:Class="Snowfall.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snowfall"
        mc:Ignorable="d"
        Title="Snowfall"
        Icon="Resources/Icon.png"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        Height="1080" 
        Width="1920"
        Loaded="Window_Loaded">
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Canvas x:Name="ContentCanvas" Background="Transparent">
            <Canvas.Clip>
                <RectangleGeometry Rect="0, 0, 1920, 1080"/>
            </Canvas.Clip>

            <Image Name="Tree" Source="Resources/Tree.png" Height="400" Opacity="0.7" Margin="-70,0,0,15" />
            <Image Name="Olaf" Source="Resources/Olaf.png" Height="220" Opacity="0.7" Margin="180,0,0,0" />
        </Canvas>
    </Grid>
</Window>
